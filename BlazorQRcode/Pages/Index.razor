@page "/"

<div id="content">
    <MudCard Style="margin:auto;width:300px;padding:20px;">
        <MudCardContent>
            <MudForm @ref="urlSubmitForm">
                <MudText> Generate QR Code</MudText>
                <MudTextField @bind-Value="SubmittedUrl" Label="Url"
                    HelperText="e.g. https://google.com" Variant="Variant.Outlined"
                    Required="true" RequiredError="The URL is required">
                </MudTextField>



                <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="@(async () => await SubmitUrl())">
                    Submit
                </MudButton>
            </MudForm>
        </MudCardContent>
    </MudCard>
    @if (!string.IsNullOrEmpty(QRCodeText))
    {
        <MudPaper MaxWith="auto" Style="margin:auto">
            <div class="qr-container">
                <img width="400" height="400" src="@QRCodeText" />
            </div>
        </MudPaper>
    }
</div>
